{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "react",
  "extends": "./base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "jsx": "preserve",
    "noEmit": true,
    "paths": {
      "@components/*": [
        "../../packages/components/*"
      ]
    }
  },
}